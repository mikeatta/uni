<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tictactoe.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <GridPane hgap="3.0" vgap="3.0">
     <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
      <children>
         <Button id="btn_R0_C0" fx:id="btn_R0_C0" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.halignment="CENTER" />
         <Button id="btn_R0_C1" fx:id="btn_R0_C1" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
         <Button id="btn_R0_C2" fx:id="btn_R0_C2" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.columnIndex="2" GridPane.halignment="CENTER" />
         <Button id="btn_R1_C0" fx:id="btn_R1_C0" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         <Button id="btn_R1_C1" fx:id="btn_R1_C1" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         <Button id="btn_R1_C2" fx:id="btn_R1_C2" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         <Button id="btn_R2_C0" fx:id="btn_R2_C0" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
         <Button id="btn_R2_C1" fx:id="btn_R2_C1" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
         <Button id="btn_R2_C2" fx:id="btn_R2_C2" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAction" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      </children>
   </GridPane>
   <Label fx:id="playerMove" text="Player's move shows up here..." />
   <Label fx:id="countMoves" text="Turn count shows up here..." />
   <Button fx:id="startResetBtn" mnemonicParsing="false" onAction="#setTurnPermissions" text="Draw first move" />
</VBox>
