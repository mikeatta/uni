<Window x:Class="FinanceManager.Views.AddAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Add New Alert" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <!-- Header -->
            <TextBlock Text="Add New Alert" FontWeight="SemiBold" Margin="0,0,0,10" />

            <!-- Input fields -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Threshold:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding AlertThreshold, StringFormat=C, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Message:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding AlertMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <!-- Control buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Add" Click="AddButton_Click" Width="60" />
                <Button Content="Cancel" Click="CancelButton_Click" Width="60" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>