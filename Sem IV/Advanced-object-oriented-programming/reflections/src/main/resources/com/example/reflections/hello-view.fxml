<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="660.0" prefWidth="480.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reflections.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <TextField fx:id="classNameField" promptText="Enter class name"/>
        <Button fx:id="createObjectButton" mnemonicParsing="false" onAction="#createClassObject" text="Create Object"/>
        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveChanges" text="Save changes"/>
    </HBox>
   <VBox fx:id="objectPropertyMenu" prefHeight="200.0" prefWidth="100.0" spacing="3.0" />
   <TextArea fx:id="objectPropertyInfo" prefHeight="200.0" prefWidth="200.0" />
</VBox>
